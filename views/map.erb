  <body>
    <h1 id="header">walk of shame</h1>
    <a href="http://twitter.com/strangerloops" id="twitter">@strangerloops</a><br><br>
    <div id="input">
      <div id="borough-picker">
        <select class="form-control" id="borough-input">
          <option value="" selected disabled>get directions from bars in...</option>
          <option value="manhattan">manhattan</option>
          <option value="bronx">bronx</option>
          <option value="brooklyn">brooklyn</option>
          <option value="queens">queens</option>
          <option value="staten_island">staten island</option>
        </select>
        <label id="pick-one" hidden>  <--- pick one of these</label>
      </div>
      <br>
      <div id="address-field">
        <label>to...</label>
        <input type="text" id="address-input" placeholder="your address (e.g. 123 main st brooklyn ny)">
        <label id="reminder" hidden>  <--- remember to include borough in the address</label>
      </div>
      <br>
      <button id="submit">go</button>
    </div>
    <div id="counter">
      <label id="counter-label"></label>
    </div>
    <div id="map"></div>
  </body>
